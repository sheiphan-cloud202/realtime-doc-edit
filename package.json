{
  "name": "realtime-ai-doc-editor",
  "version": "1.0.0",
  "description": "A realtime collaborative document editor with AI assistance",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:shared && npm run install:integration",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:shared": "cd shared && npm install",
    "install:integration": "cd tests/integration && npm install",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared && npm run build",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:shared": "cd shared && npm run dev",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test:frontend && npm run test:backend && npm run test:shared",
    "test:frontend": "cd frontend && npm test -- --run",
    "test:backend": "cd backend && npm test",
    "test:shared": "cd shared && npm test",
    "test:integration": "cd tests/integration && ./run-tests.sh",
    "test:integration:quick": "cd tests/integration && npm test",
    "test:workflows": "cd tests/integration && npm run test:workflows",
    "test:multi-user": "cd tests/integration && npm run test:multi-user",
    "test:network": "cd tests/integration && npm run test:network",
    "test:performance": "cd tests/integration && npm run test:performance"
  },
  "keywords": [
    "realtime",
    "collaborative",
    "editor",
    "ai",
    "websocket",
    "operational-transformation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}